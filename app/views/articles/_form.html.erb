<%= render 'shared/errors', obj: @article %>


<div class="row">
<%= form_for(@article, :html => {class: "form-horizontal", role: "from"}) do |f| %>

    <div class="form-group">
        <div class="col-sm-2 control-label">
            <%= f.label :title %>
        </div>
        <div class="col-sm-6">
            <%= f.text_field :title, class: "form-control", placeholder: "Titre" %>
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-sm-2 control-label">
            <%= f.label :description %>
        </div>
        <div class="col-sm-6">
            <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Description" %>
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit :Envoyer, class: "btn btn-default" %>
        </div>
    </div>
    
<% end %>
</div>